{
  "editor.rulers": [ 80 ],
  "files.trimTrailingWhitespace": true,

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/bin": true,
    "**/obj": true,
  },

  "[csharp]" : { "editor.tabSize": 3, "editor.insertSpaces": false },
  "[csproj]" : { "editor.tabSize": 2, "editor.insertSpaces": true  },
  "[json]"   : { "editor.tabSize": 2, "editor.insertSpaces": true  },
}
